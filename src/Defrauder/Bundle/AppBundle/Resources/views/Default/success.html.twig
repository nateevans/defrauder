{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid" style="max-width: 700px; min-width: 365px;">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-bank"></i> Defrauder Validation Results</h3>
            </div>
            <div class="panel-body">
            {% if transaction is null %}
                <div class="alert alert-warning">
                    <i class="fa fa-exclamation-circle"></i>&nbsp; Transaction Not Found. <strong><a href="{{ path('index') }}">Return to Validation form.</a></strong>
                </div>
            {% else %}
                <div class="alert alert-success">
                    <i class="fa fa-check"></i>&nbsp; Transaction Valid!
                </div>

                <ul class="list-group">
                    <li class="list-group-item"><strong>Business Name:</strong> {{ transaction.name }}</li>
                    <li class="list-group-item"><strong>Amount:</strong> ${{ transaction.amount }}</li>
                    <li class="list-group-item"><strong>Transaction Date:</strong> {{ transaction.createdString }}</li>
                    <li class="list-group-item"><strong>Address:</strong> {{ transaction.address }}</li>
                    <li class="list-group-item"><strong>City:</strong> {{ transaction.city }}</li>
                    <li class="list-group-item"><strong>State:</strong> {{ transaction.state }}</li>
                    <li class="list-group-item"><strong>Zip:</strong> {{ transaction.zip }}</li>
                </ul>

                <a class="btn btn-success btn-block" href="{{ path('index') }}" role="button">Do it again!</a>
            {% endif %}
            </div>
        </div>
    </div>
{% endblock %}